{{ template "app" . }}

{{ define "title" }}Results{{ end }}

{{ define "main" }}
  <h1>Results for {{ .Search }}</h1>

  <ul>
    {{ range .Results.Results }}
      <li>
        <span>{{ .CollectionName }}</span>
        {{ if hasSubscription $.Subscriptions .CollectionID }}
          <span>&check; Subscribed</span>
        {{ end }}

        {{ if hasSubscription $.Subscriptions .CollectionID }}
          <form method="POST" action="/subscriptions/delete">
        {{ else }}
          <form method="POST" action="/subscriptions">
        {{ end }}
        
          <input type="hidden" name="collectionID" value='{{ .CollectionID }}' />
          <input type="hidden" name="collectionName" value='{{ .CollectionName }}' />
          <input type="hidden" name="search" value='{{ $.Search }}' />

          <button type="submit">
            {{ if hasSubscription $.Subscriptions .CollectionID }}
              Unsubscribe
            {{ else }}
              Subscribe
            {{ end }}
          </button>
        </form>
      </li>
    {{ end }}
  </ul>
{{ end }}