{{ template "app" . }}

{{ define "title" }}Home{{ end }}

{{ define "main" }}
  <h1>Podcast stats</h1>

  {{ template "search-form" . }}

  {{ if eq (len .Subscriptions) 0 }}
    <p>Looks like you don't have any podcasts in your library yet.</p>
  {{ else }}
    <ul>
      {{ range .Subscriptions }}
        <li>
          <h3>{{ .Name }}</h3>
          <p>This week's episodes:</p>
          <ul>
            {{ range .Episodes }}
              <li>{{ .Title }}</li>
            {{ end }}
          </ul>
        </li>  
      {{ end }}
    </ul>
  {{ end }}
{{ end }}