{{ template "app" . }}

{{ define "title" }}Home{{ end }}

{{ define "main" }}
  <h1>Podcast stats</h1>

  {{ if eq (len .Subscriptions) 0 }}
    <p>Looks like you don't have any podcasts in your library yet.</p>
  {{ else }}
    <ul>
      {{ range .Subscriptions }}
        <li>
          <h3>
            <a href="/podcasts/{{ .CollectionID }}">
              {{ .Name }}
            </a>
          </h3>
        </li>  
      {{ end }}
    </ul>
  {{ end }}
{{ end }}